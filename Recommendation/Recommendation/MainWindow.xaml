<Window x:Class="Recommendation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recommendation"
        mc:Ignorable="d"
        Title="Movies Recommendation System" Height="600" Width="550">
    <Window.Background>
        <ImageBrush ImageSource="img/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="240*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="172*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Movies" FontWeight="Bold" FontSize="60" TextAlignment="Center" FontFamily="Showcard Gothic"  Grid.Row="0" Grid.Column="1" Foreground="#FFF9F7F7" Margin="27,34,28,111"/>
        <TextBlock Text="Recommendation"  FontSize="40" TextAlignment="Center" FontFamily="Showcard Gothic"  Grid.Row="0" Foreground="#FFFDFBFB" Margin="0,121,0,63" Grid.Column="0" Grid.ColumnSpan="3" />
        <TextBlock Text="System"  FontSize="40" TextAlignment="Center" FontFamily="Showcard Gothic"  Grid.Row="0" Foreground="#FFFDFBFB" Margin="0,174,0,10" Grid.Column="0" Grid.ColumnSpan="3" />

        <TextBlock Text="Enter a movie:" Grid.Column="1" VerticalAlignment="Center" Height="36" Foreground="#FFFBF7F7" FontFamily="MV Boli" FontSize="24" FontWeight="Bold" Margin="70,238,70,1" Grid.RowSpan="2" />
        <TextBox Name="slctMovie" Margin="70,8,70,8" Grid.Row="2" Grid.Column="1"  />
        <Button Name="Search" Click="Search_Click" Content="Search" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="69" BorderBrush="#FFF7F2F2" Background="#FFC3C1BB" />
        <TextBlock Text="Recommended movies:" VerticalAlignment="Center" Height="36" Foreground="#FFFBF7F7" FontFamily="MV Boli" FontSize="24" FontWeight="Bold" Grid.Row="4" Margin="30,10,30,126" Grid.Column="1" />
        <ListBox  Name="rcdMovies" SelectionMode="Multiple" Grid.Row="4" Grid.Column="1" Margin="60,50,60,0" ></ListBox>
    </Grid>
</Window>
